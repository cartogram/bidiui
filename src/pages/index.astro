---
import Head from "../components/Head.astro";
import { getHeadings } from "../content/ui-in-a-bi-directional-web.md";
import { theme } from "../theme.ts";

const headings = getHeadings();
---

<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>BI-DI-UI - Bi-directional User Interfaces</title>
	<meta name="description" content="A comprehensive guide to Bi-directional User Interfaces for front-end developers." />

	<meta property="og:title" content="BI-DI-UI - Bi-directional User Interfaces" />
	<meta property="og:description" content="A comprehensive guide to Bi-directional User Interfaces for front-end developers." />
	<meta property="og:image" content="/favicon.svg" />
	<meta property="og:url" content="https://bidiui.com" />
	<meta property="og:type" content="website" />
	<meta property="og:locale" content="en_US" />
	<meta property="og:site_name" content="BI-DI-UI" />
	<meta property="og:image:width" content="1200" />
	<meta property="og:image:height" content="630" />
	<meta property="og:image:alt" content="BI-DI-UI - Bi-directional User Interfaces" />
	<meta property="og:image:type" content="image/svg+xml" />
	<meta property="og:image:url" content="/favicon.svg" />
    <Head />
  </head>
  <body>
    <main>
      <header>
        <h1><a href="/">BI-DI-UI</a></h1>
      </header>
      <section>
        <h2>
          A comprehensive guide to<br />Bi-directional User Interfaces<br /> for
          front-end developers.
        </h2>
      </section>
	 
	  <section class="Content">
		<h2>Table of Contents</h2>
		<ul>	
		{headings.map((heading) => (
		  <li><a href={`#${heading.slug}`}>{heading.text}</a></li>
		))}
		</ul>
	  </section>
      <footer>
        <ul>
          <li>
            <a href="https://github.com/cartogram/bidiui">Contribute on Github</a>
          </li>
          <li><a href="https://cartogram.ca">Created by Matt Seccafien</a></li>
        </ul>
      </footer>
    </main>
  </body>
</html>

<style
  define:vars={{
    sizeBase: theme.size.base,
    colorForeground: theme.color.foreground,
    colorBackground: theme.color.background,
  }}
  is:global
>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  html,
  body {
    font-size: clamp(8px, 2vw, 16px);
    margin: 0;
    padding: 0;
    color: var(--colorForeground);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-color: var(--colorForeground);
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  li,
  blockquote p,
  p {
    padding: 0;
    margin: 0;
    font-size: var(--sizeBase);
    font-weight: 300;
    text-wrap: balance;
    line-height: 1.35;
  }

  h2 {
	text-decoration: underline;
	underline-offset: 0.2em;
	underline-thickness: 0.1em;
	padding: 0 0 var(--sizeBase) 0;
  }

  h3 {
	font-size: 1.5rem;
  }

  p {
    font-size: 1.75rem;
	padding: 0 0 var(--sizeBase) 0;
	max-width: 35em;
	text-wrap: pretty;
  }

  .formatted h2 {
	text-decoration: none;
	max-width: 20em;
	padding-top: var(--sizeBase);
	margin-top: var(--sizeBase);
	
  }

  blockquote p {
	padding: 0 0 var(--sizeBase) 0;
  }

  .formatted ul {
	padding: 0 0 var(--sizeBase) 0;
  }

  .formatted li {
	font-size: 1.75rem;
	max-width: 35em;
	text-wrap: pretty;
  }

  ul {
    margin: 0 0 0 var(--sizeBase);
    padding: 0;
  }

  a {
    color: inherit;
    text-decoration: none;
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 0.25em;
  }

  a:hover {
	text-decoration-skip-ink: all;
    text-decoration: underline;
    underline-offset: 0.2em;
    underline-thickness: 0.1em;
  }

  footer,
  header,
  section {
    padding: var(--sizeBase);
    position: relative;
  }


  footer {
    flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	min-height: 20em;
  }


  footer::after {
    content: "BI-DI-UI";
    display: block;
	writing-mode: vertical-rl;
	position: absolute;
	inset-block-start: 0;
	inset-inline-end: 0;
	padding: var(--sizeBase);
	font-size: var(--sizeBase);
	font-weight: 300;
	word-break: keep-all;
  }

  header::after {
    content: "";
    display: block;
    width: 100%;
    height: 0.5rem;
    background-color: currentColor;
    inset-block-end: 0;
    inset-inline-start: 0;
    inset-inline-end: 0;
    position: absolute;
  }

  main {
    background-color: var(--colorBackground);
    border: 0.2rem solid;
    flex: 1;
    border-radius: var(--sizeBase);
    display: flex;
    flex-direction: column;
  }
</style>
